<%!
    public static class GroupBridge extends BridgeBase {
        private static final Class CLASS = GroupBridge.class;
        private static final String MODEL_NAME = "Fulfillment Groups";
        public GroupBridge() {}

        public static BridgeList findByCompanyAndOrganization(HelperContext context, String templateId, String company, String organization) {
            String qualification = "By Company and Organization";
            Map<String,String> parameters = new java.util.HashMap<String,String>();
            parameters.put("Company",company);
            parameters.put("Organization",organization);
            return BridgeBase.search(context, templateId, MODEL_NAME, qualification, parameters, CLASS);
        }
        
        /*
         * PersonBridge extends Bridge base so get is avaliable
        */
        public String getGroupId() { return get("Group ID");}
        public String getGroupName() { return get("Group Name");}
    }
%>  
